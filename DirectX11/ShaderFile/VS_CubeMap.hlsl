//-------------------------------------------------------------
//	オブジェクトのワールド座標
//-------------------------------------------------------------
cbuffer WorldMatCBuffer : register(b1){

	//	列優先
	column_major float4x4	worldMat;
};

//-------------------------------------------------------------
//	頂点シェーダーの処理
//-------------------------------------------------------------
float4 VS_Main( float4 pos : POSITION ) : SV_POSITION
{
	return mul(worldMat,pos);
}